<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <RootNamespace>Seu.Mail.Core</RootNamespace>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <WarningsAsErrors>$(WarningsNotAsErrors);1591</WarningsAsErrors>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>Seu.Mail.Core</PackageId>
        <Version>1.0.0</Version>
        <Authors>Bruno Massa</Authors>
        <Company>Seu Project</Company>
        <Product>Seu Mail</Product>
        <Description>Core domain models and entities for Seu Mail - a privacy-focused email client</Description>
        <Copyright>Copyright Â© 2024 Bruno Massa</Copyright>
        <PackageProjectUrl>https://github.com/brmassa/Seu-Mail</PackageProjectUrl>
        <RepositoryUrl>https://github.com/brmassa/Seu-Mail</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>email;privacy;blazor;imap;smtp;calendar</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="9.0.8"/>
    </ItemGroup>


</Project>
